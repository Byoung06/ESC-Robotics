o = 0
e = 0
r = int(input("How many numbers do you need to check? "))
for n in range(1, r + 1):
    
    n = int(input("Enter number: "))
    if(n % 2 == 0):
        print(str(n) + " is an even number.")
        o = o + 1
    else:
        print(str(n) + " is an odd number.")
        e = e + 1
        
print("You entered " + str(o) + " even number(s).")
print("You entered " + str(e) + " odd number(s).")
